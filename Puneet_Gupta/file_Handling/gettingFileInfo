import java.io.File;
public class gettingFileInfo {
    public static void main(String[] args) {
        File f=new File("birdsFact.txt");
        if(f.exists()){
//            Getting file name
            System.out.println(f.getName());
//            Getting file location
            System.out.println(f.getAbsolutePath());
//            Getting file length in bytes
            System.out.println(f.length());
//            Check we can read our file or not?
            System.out.println(f.canRead());
//            check we can write some text in our file or not?
            System.out.println(f.canWrite());
        }
        else
            System.out.println(f.getName()+" File doesn't exist");
    }
}
